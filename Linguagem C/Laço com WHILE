#include<stdio.h>
#include<stdlib.h>

main()
{
	float salario, dividas, sobra, total;
	int contador;
	
	printf("Ola digite seu salario/renda:\n");
	scanf("%f", &salario);
	system("cls");
	
	printf("\n***Vamos la chegou a hora de voce informar sua divida ou dividas***\n\n*PARA ENCERRAR DIGITE 0 *\n");
	
	printf("\nDigite o valor da divida/fatura:\n");
	scanf("%f", &dividas);
	
	while(dividas != 0){
		
		total = total + dividas;
		contador ++;
		
		printf("\nDigite o valor da divida/fatura:\n");
		scanf("%f", &dividas);
		
	}
	
	dividas = total;
	
	system("cls");
	printf("\n***SALARIO: $%.2f *** DIVIDA: $%.2f *** SOBRA: $%.2f ***\n", salario, dividas, salario - dividas );
}
