#include<stdio.h>
#include<stdlib.h>

main()
{			//Verifique se eh par ou impar:
 int i, num, contador;
			
			//lendo quantas vezes ira rodar..
	printf("***Descubra se valores sao PAR ou IMPAR***\n");		
	printf("\nOla, digite quantos numeros quer verificar ?:\n");
	scanf("%d", &contador);
	system("cls");
	
			//laco for para controle de loop..
   for(i =1; i <=contador; i++)
{
	printf("\nDigite numero:");
	scanf("%d", &num);
		
			//operador ternario para verdadeiro ou falso..
	printf((num%2==0)? "\n---> PAR\n" : "\n---> IMPAR\n");
}
	system("pause");
	system("cls");
	
	printf("\nPrograma Finalizado.");
}
