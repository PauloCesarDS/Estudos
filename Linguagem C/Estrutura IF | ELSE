#include<stdio.h>
#include<stdlib.h>

main()
{

float nota1, nota2, nota3, media;
char nome[20];

	printf("******CALCULO DE MEDIA******\n");
	printf("\nDigite seu nome: \n\n");
	scanf(" %s", &nome);
	system("cls");
	
	printf("\nOla %s, digite sua 1 nota abaixo: \n\n",nome);
	scanf(" %f", &nota1);
	
	printf("\nDigite sua 2 nota: \n\n");
	scanf(" %f", &nota2);
	
	printf("\nAgora digite sua 3 nota: \n\n");
	scanf(" %f", &nota3);
	
	media = (nota1 + nota2+ nota3)/3;
	system("cls");
	
	if (media>= 7)
	{
		printf("\n\nParabens %s, voce passou direto!\n",nome);
	}
	else if (media<= 5)
	{
		printf("\n\nInfelizmente voce reprovou %s.\n",nome);	
	}	
	else 
	{
		printf("\n\nVoce esta em recuperacao %s, corre que ainda da tempo!!\n",nome);
	}		
}
