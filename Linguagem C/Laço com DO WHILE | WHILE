#include<stdio.h>
#include<stdlib.h>

main()
{
	float salario, dividas, total;
	int contador, retorno;
	
	do{
		
	system("cls");
	
	printf("Ola digite seu salario/renda:\n");
	scanf("%f", &salario);
	system("cls");
	
	printf("\n***Vamos la chegou a hora de voce informar sua divida ou dividas***\n\n*DIGITE (0) AO FINAL PARA CALCULAR*\n");
	
	printf("\nDigite o valor da divida/fatura:\n");
	scanf("%f", &dividas); 

	while(dividas != 0)
		{
		total = total + dividas;
		contador ++;
		
		printf("\nDigite o valor da divida/fatura:\n");
		scanf("%f", &dividas); 
		}
	
	dividas = total;
	
	system("cls");
	printf("\n***SALARIO: $%.2f *** DIVIDA: $%.2f *** SALDO: $%.2f ***\n", salario, dividas, salario - dividas );

	printf("\nPara uma nova consulta digite (1)\nPara finalizar o programa digite (0)\n");
	scanf("%d", &retorno);
		
	}while(retorno !=0);
}
