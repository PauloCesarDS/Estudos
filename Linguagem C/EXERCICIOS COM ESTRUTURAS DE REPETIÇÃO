/*3° Faça um algoritmo que imprima a tabuada de multiplicação 
entre 2 números que o usuário escolher.*/

int main()
{
    int i, contador, valor1, giro=1;
	
	for(valor1 =1; giro<=2; valor1++) // laco para incremento ao primeiro numero, 
	{									 // toda vez que o abaixo rodar 10 vezes
		
		giro++; //tinha esquecido desse incremento!
		
		printf("\nATIVIDADE DE LOGICA| TABUADA:\n DIGITE NUMERO ABAIXO:\n");
		scanf("\t%d", &valor1);
		
		contador =1; // para o contador reiniciar de 1 a 10 dinovo.
		
		printf("\n   TABUADA DO %d NUMERO:\n",valor1);
		
		for(i =1; i<=10; i++) //laco para fazer tabuada do (1)
		{	
		printf("\n\t%d x %d = %d\n", valor1, contador++, valor1 * contador);
		}	
	}
}
